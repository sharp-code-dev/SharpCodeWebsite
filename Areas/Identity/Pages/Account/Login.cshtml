@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('document').ready(function () {
            $(".input-size").change(function () {

                $(this).css("border", "2px solid #98F5FF");
                $(this).css("height", "40px");

            }).trigger("change");
            document.body.style.background = '#fff';

        });
    </script>
}
