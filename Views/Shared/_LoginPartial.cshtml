@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav" id="partial-container">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-color9" id = "text-color9" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn-link" id="logout">Logout</button>
        </form>
    </li>
}
else
{
    
        
    <li class="nav-item">
        <a class="nav-link" id="text-color5" asp-area="Identity" asp-page="/Account/Register">Signup</a>
    </li>
        
   
    
    <li class="nav-item">
        <a class="nav-link" id="text-color6" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
